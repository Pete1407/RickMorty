<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".feature.location.DetailLocationActivity">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/spacing_standard"
            android:background="@drawable/icon_back_button" />
    </FrameLayout>

    <com.example.rickmorty.app.base.custom.CustomTextView
        android:id="@+id/episodeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        android:textSize="44sp"
        android:padding="@dimen/spacing_standard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameLayout"
        tools:text="The Ricklantis Mix up" />


    <com.example.rickmorty.app.data.utils.customview.SpecifyTagWidget
        android:id="@+id/tagSeason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_standard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/episodeName" />

    <com.example.rickmorty.app.data.utils.customview.SpecifyTagWidget
        android:id="@+id/tagEpisode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_standard"
        app:layout_constraintStart_toEndOf="@id/tagSeason"
        app:layout_constraintTop_toBottomOf="@id/episodeName" />

    <com.example.rickmorty.app.base.custom.CustomTextView
        android:id="@+id/numberOfResidents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tagSeason"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/spacing_standard"
        android:layout_marginTop="25dp"
        android:textSize="32sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        tools:text="@string/number_resident"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numberOfResidents"
        app:layout_constraintBottom_toBottomOf="parent"
        app:spanCount="2"
        android:layout_marginTop="@dimen/spacing_standard"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/item_card_character"/>

</androidx.constraintlayout.widget.ConstraintLayout>