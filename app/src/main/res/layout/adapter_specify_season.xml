<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_background">

    <com.example.rickmorty.app.base.custom.CustomTextView
        android:id="@+id/titleSeason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_standard"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Season 1" />

    <com.example.rickmorty.app.base.custom.CustomTextView
        android:id="@+id/seeMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_standard"
        android:background="@drawable/bg_see_more_button"
        android:fontFamily="@font/roboto_mono_bold"
        android:text="@string/title_see_more"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:padding="@dimen/spacing_small"
        app:layout_constraintBottom_toBottomOf="@+id/titleSeason"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/titleSeason"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/seasonRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_standard"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_adapter_episode"
        tools:itemCount="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleSeason" />
</androidx.constraintlayout.widget.ConstraintLayout>